doctype html
html
  head
    title Add customer
    link(link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous")
  body
    div.container
    h1 New customer
      form(action='/addcustomer', method='POST').container
        div.form-group
          label.form-goup.row firstname
          input(type="text", name="firstname")
        div.form-group
          label.form-goup.row lastname
          input(type="text", name="lastname")
        div.form-group
            label.form-goup.row email
             input(type="number", name="email") 
        div.form-group
          label.form-goup.row phone
          input(type="number", name="phone") 
        div.form-group
          label Ready? click here
            input(type="submit", value="Add").btn.btn-info